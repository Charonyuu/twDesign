{
    "compilerOptions": {
        "outDir": "libra",
        "module": "ESNext",
        "lib": ["DOM","ESNext"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules","libra"]
}